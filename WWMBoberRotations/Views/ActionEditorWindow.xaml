<Window x:Class="WWMBoberRotations.Views.ActionEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Action Editor" 
        Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Edit Action" 
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Action Type -->
        <ComboBox Grid.Row="1" 
                  x:Name="ActionTypeCombo"
                  materialDesign:HintAssist.Hint="Action Type"
                  SelectionChanged="ActionTypeCombo_SelectionChanged"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  Margin="0,0,0,20">
            <ComboBoxItem Content="Press Key" Tag="KeyPress"/>
            <ComboBoxItem Content="Hold Key" Tag="KeyHold"/>
            <ComboBoxItem Content="Mouse Click" Tag="MouseClick"/>
            <ComboBoxItem Content="Delay" Tag="Delay"/>
        </ComboBox>

        <!-- Configuration Panel -->
        <materialDesign:Card Grid.Row="2" Margin="0,0,0,20">
            <Grid x:Name="ConfigPanel" Margin="15">
                <!-- Configuration controls will be added dynamically -->
            </Grid>
        </materialDesign:Card>

        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="SAVE" 
                    Click="Save_Click" 
                    IsDefault="True"
                    Margin="0,0,10,0"
                    Style="{StaticResource PrimaryButton}"/>
            
            <Button Content="CANCEL" 
                    Click="Cancel_Click" 
                    IsCancel="True"
                    Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>
