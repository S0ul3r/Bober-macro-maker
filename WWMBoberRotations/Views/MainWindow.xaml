<Window x:Class="WWMBoberRotations.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="WWM Bober Rotations" 
        Icon="/Assets/app_icon.png"
        Height="800" Width="1000"
        MinHeight="700" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        PreviewKeyDown="Window_PreviewKeyDown"
        PreviewMouseDown="Window_PreviewMouseDown">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Start/Stop Button + Panic Button Setup -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left: Start/Stop Button (Full Width) -->
            <Button Grid.Column="0"
                    x:Name="StartStopButton"
                    Height="60"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Stretch"
                    Command="{Binding ToggleSystemCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Play" Width="24" Height="24" Margin="0,0,10,0"/>
                        <TextBlock Text="START MACRO SYSTEM" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            
            <!-- Right: Panic Button Setup (Column Layout) -->
            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right">
                <TextBlock Text="{Binding PanicButtonText}" 
                           Foreground="{DynamicResource SecondaryHueMidBrush}"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,0,5"
                           TextAlignment="Right"/>
                <Button Content="Set Panic Button" 
                        Command="{Binding SetPanicButtonCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Height="36"
                        Padding="12,5"
                        FontSize="12"/>
            </StackPanel>
        </Grid>

        <!-- Main Content: Combos List + Side Panel -->
        <Grid Grid.Row="1" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left: Combos List -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Combos" 
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="15,15,15,10"/>

                    <ListBox x:Name="CombosListBox"
                             Grid.Row="1" 
                             ItemsSource="{Binding Combos}"
                             SelectedItem="{Binding SelectedCombo}"
                             Margin="10"
                             SelectionMode="Single"
                             MouseDoubleClick="CombosListBox_MouseDoubleClick">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="MinHeight" Value="32"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="0" FontSize="13"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <Button Command="{Binding NewComboCommand}" Margin="5" Style="{StaticResource MaterialDesignRaisedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Margin="0,0,5,0"/>
                                <TextBlock Text="New Combo"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding EditComboCommand}" Margin="5" Style="{StaticResource MaterialDesignRaisedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pencil" Margin="0,0,5,0"/>
                                <TextBlock Text="Edit Combo"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding RecordMacroCommand}" Margin="5" Style="{StaticResource MaterialDesignRaisedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="RecordCircle" Margin="0,0,5,0"/>
                                <TextBlock Text="Record Macro"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding DuplicateComboCommand}" Margin="5" Style="{StaticResource MaterialDesignRaisedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentCopy" Margin="0,0,5,0"/>
                                <TextBlock Text="Duplicate"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding DeleteComboCommand}" Margin="5" Style="{StaticResource MaterialDesignRaisedButton}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" Margin="0,0,5,0"/>
                                <TextBlock Text="Delete"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
            
            <!-- Right: Side Panel with buttons and auto-save at bottom -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Top: File Operations Buttons -->
                <StackPanel Grid.Row="0" Orientation="Vertical">
                    <Button Command="{Binding SaveCombosCommand}" 
                            Margin="0,0,0,5" 
                            HorizontalAlignment="Stretch"
                            Style="{StaticResource MaterialDesignRaisedButton}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,5,0"/>
                            <TextBlock Text="Save"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding LoadCombosCommand}" 
                            Margin="0,0,0,5"
                            HorizontalAlignment="Stretch"
                            Style="{StaticResource MaterialDesignRaisedButton}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="FolderOpen" Margin="0,0,5,0"/>
                            <TextBlock Text="Load"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding ExportCommand}" 
                            Margin="0,0,0,5"
                            HorizontalAlignment="Stretch"
                            Style="{StaticResource MaterialDesignRaisedButton}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Export" Margin="0,0,5,0"/>
                            <TextBlock Text="Export"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding ImportCommand}" 
                            Margin="0,0,0,5"
                            HorizontalAlignment="Stretch"
                            Style="{StaticResource MaterialDesignRaisedButton}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Import" Margin="0,0,5,0"/>
                            <TextBlock Text="Import"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <!-- Bottom: Loaded count + Status message + Auto-save Toggle -->
                <StackPanel Grid.Row="2" Orientation="Vertical" VerticalAlignment="Bottom">
                    <!-- Status Message -->
                    <TextBlock HorizontalAlignment="Center"
                               FontSize="11"
                               Opacity="0.8"
                               Margin="0,0,0,5"
                               Text="{Binding StatusMessage, Mode=OneWay}"
                               Visibility="{Binding StatusMessage, Converter={StaticResource StringNotEmptyToVisibilityConverter}}"/>
                    
                    <!-- Loaded Combos Count -->
                    <TextBlock HorizontalAlignment="Center"
                               FontSize="11"
                               Opacity="0.8"
                               Margin="0,0,0,10">
                        <Run Text="Loaded"/>
                        <Run Text="{Binding Combos.Count, Mode=OneWay}" FontWeight="Bold"/>
                        <Run Text="combos"/>
                    </TextBlock>
                    
                    <!-- Auto-save Toggle (single row) -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="ContentSaveAll" 
                                                 Width="16" 
                                                 Height="16" 
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,5,0"
                                                 Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="Auto-save" 
                                   VerticalAlignment="Center"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Margin="0,0,5,0"/>
                        <ToggleButton IsChecked="{Binding IsAutoSaveEnabled}"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                      ToolTip="Auto-save every 30 seconds"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
